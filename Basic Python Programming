'''Working with Strings'''

print("code 3\n\n" + "******Surendran\"\*********\n*****Dayanandan**********"+ "\n\n")

character_name="Surendran"
print("Code 4\n\n")
print(character_name.upper().isupper())
print("First character of  "+ character_name+ " is " + character_name[0])
print("Length of  "+ character_name+ " is " )
print(len(character_name))
print("The character a is at the position " + str(character_name.index("a")) +" in " + character_name)
'''print(character_name.index("a"))'''
print(" Replaced")
print(character_name.replace("Suren","Naren"))
